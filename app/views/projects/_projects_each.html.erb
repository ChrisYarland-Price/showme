<div class="container">
  <div class="row">
    <h1 class="new_project"><%= @header %></h1>
      <% if spartan_signed_in? %>
        <%= link_to 'New Project', new_project_path, class: "new_project btn" %>
      <% end %>
  </div>
  <div class="row">
    <% @projects.each do |project| %>
      <div class = "card col-md-4 col-sm-6">
        <h2><a href="/projects/<%= project.id %>"><%= project.name %></a></h2>
        <% if project.image %>
          <%= image_tag project.image, class: "project_image" %>
        <% else %>
        <% end%>
        <h4>Summary: </h4>
        <p><%= project.summary %></p>
        <h4>Technologies: </h4>
        <p><%= project.technologies %></p>
        <td><a href="<&= project.url %>">Visit project</a></td>

        <% if spartan_signed_in? %>
          <% if current_spartan.admin %>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
            <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </div>

    <% end %>
  </div>
</div>

