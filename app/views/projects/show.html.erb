<!-- Show page for an individual project -->
<div class= "show">
  <p>
    <h2>
      <a href="<%= @project.url %>"><%= @project.name %></a>
    </h2>
  </p>

  <!-- Displays a screenshot of the project if there is one in the database, otherwise displays a message -->
  <div class= "show_image">
    <% if @project.image %>
      <%= image_tag @project.image, class: "project_image", alt: "A screenshot of the game" %>
    <% else %>
      <p>There is no image for this project. Could you please add one.</p>
    <% end %>
  </div>

  <br/>

  <div class= "show_content">
    <p>   
      <%= @project.summary %>
    </p>

    <p>
      <strong>Technologies:</strong>
      <%= @project.technologies %>
    </p>
    
  </div>
  <p><a href="<%= @project.url %>"><button type="button" class="btn btn-secondary">Visit Project</button></a></p>
</div>

<div class= "sidebar">
  <p>
    <h3>Spartans</h3>
    <ul>
      <% @project.spartans.each do |spartan| %>
        <li><%= spartan.name %></li>
      <% end %>
    </ul>
  </p>
</div>

<div class= "show">
  <!-- If current user signed in AND an admin, they can edit and destroy the project-->
  <% if spartan_signed_in? %>
    <% if current_spartan.admin %>
      <div class= "show_links">
    		<%= link_to 'Edit', edit_project_path(@project) %> |
        <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } %> 
      </div>
    <% end %>
  <% end %>

  <!-- Link to return to projects index -->
  <div class= "back">
    <p><button type="button" class="btn btn-secondary"><%= link_to 'Back', projects_path %></button></p>
  </div>
</div>